@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col is-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form-control">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="is-danger"></div>
            <div class="field">
                <label asp-for="Email" class="label"></label>
                <input asp-for="Email" class="input" />
                <span asp-validation-for="Email" class="is-danger"></span>
            </div>
            <div class="field">
                <label asp-for="Password" class="label"></label>
                <input asp-for="Password" class="input" />
                <span asp-validation-for="Password" class="is-danger"></span>
            </div>
            <div class="field">
                <label asp-for="ConfirmPassword" class="label"></label>
                <input asp-for="ConfirmPassword" class="input" />
                <span asp-validation-for="ConfirmPassword" class="is-danger"></span>
            </div>
            <button type="submit" class="button is-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
