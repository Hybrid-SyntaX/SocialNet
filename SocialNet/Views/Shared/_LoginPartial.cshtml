@using Microsoft.AspNetCore.Identity
@using SocialNet.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-end">
        <a asp-area="" asp-controller="Manage" asp-action="Index" class="navbar-item" title="Manage">
            Hello @UserManager.GetUserName(User)!
        </a>
        <div class="navbar-item ">
            <button type="submit" class="button">Log out</button>
        </div>
    </form>
}
else
{
    <div class="navbar-end">
        <a asp-area="" asp-controller="Account" asp-action="Register" class="navbar-item">Register</a>
        <a asp-area="" asp-controller="Account" asp-action="Login" class="navbar-item">Log in</a>
    </div>

}
